{
  "compilerOptions": {

    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",

    "esModuleInterop": true,

    "resolveJsonModule": true,

    "importHelpers": true,

    "module": "ESNext",

    "moduleResolution": "node",

    "strict": true,

    "jsx": "preserve",

    "sourceMap": true,

    "skipLibCheck": true,

    "target": "ESNext",

    "types": [],

    "typeRoots": [],

    "isolatedModules": true,

    "paths": {
      "@/*": ["src/*"],
      "*": ["typings/*"]
    },

    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}
